<h1>Create your Profile</h1>

<% if current_user %>
  <%= form_for @profile, :html => {:class => "form-horizontal center"} do |form| %>
  <div class="form-group">
    <%= form.label :name, "Name:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
    <%= form.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= form.label :location, "Location:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= form.text_field :location, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :short_bio, "Bio:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
    <%= form.text_field :short_bio, class: "form-control" %>
  </div>
</div>
    <%= form.submit "Submit", class: "btn btn-default btn-primary" %>
   <% end %>
  <%end %>
